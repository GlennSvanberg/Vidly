
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>ReleaseDate: @Model.ReleaseDate.ToString("yyyy/MM/dd")</li>
    <li>Date Added: @Model.DateAdded.ToString("yyyy/MM/dd")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

